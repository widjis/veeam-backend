# Veeam Configuration
VEEAM_BASE_URL=https://your-veeam-server:9419/api/v1
VEEAM_USERNAME=your-veeam-username
VEEAM_PASSWORD=your-veeam-password

# WhatsApp Configuration
WHATSAPP_WEBHOOK_URL=http://your-webhook-server/send-message
WHATSAPP_CHAT_ID=your-whatsapp-chat-id

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=localhost

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Monitoring Configuration
MONITORING_INTERVAL=300000
MONITORING_MEMORY_THRESHOLD=0.8
MONITORING_CPU_THRESHOLD=0.8

# Alerting Configuration
ALERTING_ENABLED=true
ALERTING_MAX_RETRIES=5
ALERTING_RETRY_INTERVAL=300000

# Repository Thresholds
REPO_WARNING_THRESHOLD=70
REPO_CRITICAL_THRESHOLD=85

# Health Score Thresholds
HEALTH_WARNING_THRESHOLD=70
HEALTH_CRITICAL_THRESHOLD=50

# Job Duration Thresholds (hours)
JOB_WARNING_DURATION=4
JOB_CRITICAL_DURATION=8

# Timezone
TIMEZONE=UTC

# Development
NODE_ENV=production
DEBUG=false